<%= form_with(model: gaji, local: true) do |form| %>
  <% if gaji.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gaji.errors.count, "error") %> prohibited this gaji from being saved:</h2>

      <ul>
        <% gaji.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :karyawan_id %>
    <%= form.collection_select(:karyawan_id, Karyawan.all, :id, :nama, {prompt: true},{class:"form-select"}) %>
  </div>

  <div class="mt-3">
    <%= form.label :id_tunjangan %><br>
    <%= form.collection_check_boxes(:tunjangan_ids, Tunjangan.all, :id, :nama) %>
  </div>

  <div class="mt-3">
    <%= form.label :desc %>
    <%= form.text_field :desc, class:"form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :potongan %>
    <%= form.number_field :potongan, class:"form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Submit", class:"btn btn-success"%>
  </div>
<% end %>
